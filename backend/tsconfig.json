{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",  
    "strict": true,
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",  
    "rootDir": "./",     
    "moduleResolution": "node"
  },
  "include": ["index.ts", "src/**/*"],  
  "exclude": ["node_modules"] 
}
